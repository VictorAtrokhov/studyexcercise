    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col">
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <%- include('parts/carouselitem', { text: "Cool belts", image: "/images/belt.jpeg" }) %>
